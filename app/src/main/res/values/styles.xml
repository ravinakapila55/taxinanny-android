<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="custom_animation" parent="android:Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_to_right</item>
        <item name="android:windowExitAnimation">@anim/slide_to_left</item>
    </style>

    <style name="DialogAnimation"><item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item></style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorGreen</item>
    </style>

</resources>
