<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/view_5"
    android:layout_margin="@dimen/view_10"
    app:cardElevation="@dimen/view_5">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/view_5"
        android:background="@color/white"
        android:layout_height="match_parent"
      >

        <View
            android:id="@+id/viewDisableLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_50"
            android:background="@color/stroke_light"
            android:clickable="true"
            android:layout_marginLeft="@dimen/view_10"
            android:layout_marginRight="@dimen/view_10"
            android:focusable="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <ImageView
            android:src="@drawable/location_black"
            android:id="@+id/ivlocation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="@dimen/view_35"
            android:layout_height="@dimen/view_35"/>

        <ImageView
            android:src="@drawable/edit"
            android:id="@+id/ivEdit"
            android:padding="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/view_20"
            android:layout_height="@dimen/view_20"/>

        <TextView
            android:id="@+id/tvNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_5"
            android:layout_marginLeft="@dimen/view_5"
            android:paddingRight="@dimen/view_5"
            android:paddingEnd="@dimen/view_5"
            android:padding="@dimen/view_1"
            android:textSize="@dimen/txt_16"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/ivlocation"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="@dimen/view280"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvNick"
            app:layout_constraintLeft_toRightOf="@+id/ivlocation"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:maxLines="3"
            android:paddingRight="@dimen/view_10"
            android:textSize="@dimen/txt_14"
            android:text="Abc"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/light_gray"/>

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>