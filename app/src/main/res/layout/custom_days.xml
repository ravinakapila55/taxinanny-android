<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewDisableLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_40"
        android:background="@color/stroke_light"
        android:clickable="true"
        android:layout_marginLeft="@dimen/view_10"
        android:layout_marginRight="@dimen/view_10"
        android:focusable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>



        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_20"
            android:layout_marginTop="@dimen/view_10"
            android:layout_marginEnd="193dp"
            android:layout_marginRight="193dp"
            android:layout_marginBottom="13dp"
            android:text="John Smith"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/txt_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/img_tick"
        android:layout_width="@dimen/view_40"
        android:layout_height="@dimen/view_40"
        android:padding="@dimen/view_10"
        android:visibility="invisible"
        android:src="@drawable/ic_check"
        android:layout_marginTop="@dimen/view_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ViewM"
        app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/ViewM"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@+id/tvDay"
            android:layout_marginTop="@dimen/view_8"
            android:layout_marginLeft="@dimen/view_10"
            android:layout_marginRight="@dimen/view_10"
            android:paddingBottom="@dimen/view_15"
            />
    </android.support.constraint.ConstraintLayout>


