<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="60dp"
   android:background="@color/colorGreen"
    >

    <ImageView
        android:background="@android:color/transparent"
        android:layout_width="@dimen/view_45"
        android:padding="@dimen/view_10"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_back"
        android:id="@+id/img_back_btn"
        android:layout_height="@dimen/view_45" />

    <TextView
        android:layout_toRightOf="@+id/img_back_btn"
        android:layout_centerVertical="true"
        android:id="@+id/txt_title"
        android:layout_marginLeft="@dimen/view_10"
        android:textSize="@dimen/txt_16"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:text="Login"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvEnd"
        android:layout_marginLeft="@dimen/view_10"
        android:textSize="@dimen/txt_16"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:text="Skip"
        android:visibility="gone"
        android:layout_marginRight="@dimen/view_10"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/ivEnd"
        android:layout_marginLeft="@dimen/view_10"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:visibility="gone"
        android:src="@drawable/add_white"
        android:layout_marginRight="@dimen/view_10"
        android:layout_height="30dp"/>



</RelativeLayout>