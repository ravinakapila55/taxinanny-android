<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:src="@android:drawable/star_big_off"
            android:id="@+id/ivUser"
            android:layout_width="@dimen/view_15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/view_5"
            android:layout_height="@dimen/view_15"/>

        <TextView
            android:id="@+id/tvStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/dark_gray"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/txt_20"
            app:layout_constraintLeft_toRightOf="@+id/ivUser"
            android:layout_marginLeft="@dimen/view_8"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="@dimen/view300"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tvStar"
            android:backgroundTint="@color/colorGreen"
            style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
            android:progressTint="@color/colorGreen"
            android:minHeight="20dp"
            android:minWidth="250dp"
            android:max="1000"
            android:layout_marginTop="@dimen/view_5"
            android:layout_marginLeft="@dimen/view_8"
            />

    <!--            android:indeterminate="true"
-->

        <TextView
            android:id="@+id/tvPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:text="456"
            android:layout_marginRight="@dimen/view_5"
            android:textSize="@dimen/txt_14"
            app:layout_constraintTop_toBottomOf="@+id/progress"/>

    </android.support.constraint.ConstraintLayout>

