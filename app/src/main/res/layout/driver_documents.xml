<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <include
            android:id="@+id/header"
            layout="@layout/header" />

        <android.support.v7.widget.CardView
            android:id="@+id/cvLicence"
            app:cardElevation="@dimen/view_5"
            app:cardCornerRadius="@dimen/view_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_10"
            android:layout_marginRight="@dimen/view_10"
            android:layout_marginTop="@dimen/view_15"
            android:layout_marginBottom="@dimen/view_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="@dimen/view_10"
                    android:gravity="center_vertical"
                    android:text="Driver Licence"
                    android:layout_weight=".2"
                    android:textColor="@android:color/black"
                    android:layout_height="@dimen/view_45" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_25"
                    android:layout_weight=".8"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/view_10"
                    android:src="@drawable/arrow_right"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cvInsurance"
            app:cardElevation="@dimen/view_5"
            app:cardCornerRadius="@dimen/view_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_10"
            android:layout_marginRight="@dimen/view_10"
            android:layout_marginTop="@dimen/view_10"
            android:layout_marginBottom="@dimen/view_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvLicence">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="@dimen/view_10"
                    android:layout_weight=".2"
                    android:gravity="center_vertical"
                    android:text="Vehicle Insurance"
                    android:textColor="@android:color/black"
                    android:layout_height="@dimen/view_45" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_25"
                    android:layout_weight=".8"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/view_10"
                    android:src="@drawable/arrow_right"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvPermit"
            app:cardElevation="@dimen/view_5"
            app:cardCornerRadius="@dimen/view_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_10"
            android:layout_marginRight="@dimen/view_10"
            android:layout_marginTop="@dimen/view_10"
            android:layout_marginBottom="@dimen/view_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvInsurance">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="@dimen/view_10"
                    android:gravity="center_vertical"
                    android:text="Vehicle Permit"
                    android:layout_weight=".2"
                    android:textColor="@android:color/black"
                    android:layout_height="@dimen/view_45" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_25"
                    android:layout_weight=".8"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/view_10"
                    android:src="@drawable/arrow_right"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cvRegistration"
            app:cardElevation="@dimen/view_5"
            app:cardCornerRadius="@dimen/view_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_10"
            android:layout_marginRight="@dimen/view_10"
            android:layout_marginTop="@dimen/view_10"
            android:layout_marginBottom="@dimen/view_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvPermit">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="@dimen/view_10"
                    android:layout_weight=".2"
                    android:gravity="center_vertical"
                    android:text="Vehicle Registration"
                    android:textColor="@android:color/black"
                    android:layout_height="@dimen/view_45" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_25"
                    android:layout_weight=".8"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/view_10"
                    android:src="@drawable/arrow_right"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>





    </android.support.constraint.ConstraintLayout>

