<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/view_20"
    app:cardElevation="@dimen/view_10"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/view_10"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMsg"
            android:layout_marginTop="@dimen/view_10"
            android:layout_width="match_parent"
            android:text="Alert!"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_20"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="@dimen/view_5"
            android:textColor="@android:color/black"
            android:id="@+id/txt_msg"
            android:layout_marginTop="@dimen/view_10"
            android:text="Your account has been successfully registered."
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/btn_bg"
            android:layout_marginTop="@dimen/view_10"
            android:textColor="@android:color/white"
            android:paddingLeft="@dimen/view_20"
            android:paddingRight="@dimen/view_20"
            android:layout_width="wrap_content"
            android:text="Ok"
            android:layout_marginBottom="@dimen/view_20"
            android:id="@+id/btn_try_again"
            android:layout_height="@dimen/view_45" />

    </LinearLayout>

</android.support.design.card.MaterialCardView>